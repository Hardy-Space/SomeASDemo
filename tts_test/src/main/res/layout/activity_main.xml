<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hardy.person.tts_test.MainActivity">

    <EditText
        android:id="@+id/textToSpeak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入要朗读的文本"/>
    <Button
        android:id="@+id/speak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始朗读"/>

    <Button
        android:id="@+id/writeToFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自动朗读声音写入文件"/>

    <Button
        android:id="@+id/speakFromFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="播放存入文件的自动朗读声音"/>


</LinearLayout>
